# Database Configuration
DATABASE_URL=postgresql://senlo_user:senlo_password@db:5432/senlo_db

# Authentication
# Generate a secret using: openssl rand -base64 32
AUTH_SECRET="YOUR_AUTH_SECRET_HERE"

# Required for VPS deployment to trust the host IP/Domain
AUTH_TRUST_HOST=true

# Registration Control
# Set to "false" to disable public registration.
ALLOW_REGISTRATION="true"

# Application URL
# Replace with your server's IP or domain (including port if not 80/443)
# Example: http://95.213.11.22:3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Initial Admin Users (for PRIVATE mode or first run)
# Format: '[{"name": "Admin", "email": "admin@example.com", "password": "secure_password", "role": "ADMIN"}]'
INITIAL_USERS='[]'

